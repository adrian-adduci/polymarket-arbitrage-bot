# Polymarket Trading Bot Environment Variables
# Copy this file to .env and fill in your values
# Load with: source .env or use python-dotenv

# =============================================================================
# Required: Wallet Configuration
# =============================================================================

# Your MetaMask private key (64 hex characters, with or without 0x prefix)
# WARNING: Never commit this to git!
POLY_PRIVATE_KEY=

# Your Polymarket Safe/Proxy wallet address
# Find at: polymarket.com/settings -> General -> Wallet Address
POLY_SAFE_ADDRESS=

# =============================================================================
# Required for Gasless Trading: Builder Program Credentials
# =============================================================================

# Apply for Builder Program at: polymarket.com/settings?tab=builder
POLY_BUILDER_API_KEY=
POLY_BUILDER_API_SECRET=
POLY_BUILDER_API_PASSPHRASE=

# =============================================================================
# Optional: Network Configuration
# =============================================================================

# Polygon RPC URL (default: https://polygon-rpc.com)
# POLY_RPC_URL=https://polygon-rpc.com

# Chain ID (default: 137 for Polygon mainnet)
# POLY_CHAIN_ID=137

# CLOB API host (default: https://clob.polymarket.com)
# POLY_CLOB_HOST=https://clob.polymarket.com

# =============================================================================
# Optional: Trading Defaults
# =============================================================================

# Default order size in USDC
# POLY_DEFAULT_SIZE=1.0

# Default price (0-1, probability)
# POLY_DEFAULT_PRICE=0.5

# =============================================================================
# Optional: Paths and Logging
# =============================================================================

# Directory for storing encrypted credentials
# POLY_DATA_DIR=credentials

# Logging level: DEBUG, INFO, WARNING, ERROR
# POLY_LOG_LEVEL=INFO

# =============================================================================
# VPS Deployment Settings
# =============================================================================

# Log file path (leave empty for console only)
# POLY_LOG_FILE=/var/log/polymarket-bot/bot.log

# Log format: "text" or "json" (json recommended for log aggregation)
# POLY_LOG_FORMAT=text

# =============================================================================
# Health Monitoring
# =============================================================================

# HTTP health endpoint port
# POLY_HEALTH_PORT=8080

# Health endpoint bind address (127.0.0.1 for localhost only)
# POLY_HEALTH_HOST=127.0.0.1

# Heartbeat interval in seconds
# POLY_HEARTBEAT_INTERVAL=30

# =============================================================================
# Trading Defaults (VPS)
# =============================================================================

# Default profit threshold for auto-trading (0.025 = 2.5%)
# POLY_DEFAULT_THRESHOLD=0.025

# Enable dry-run mode by default (true/false)
# POLY_DRY_RUN=true

# =============================================================================
# Process Management
# =============================================================================

# PID file location (for process management)
# POLY_PID_FILE=/var/run/polymarket-bot/bot.pid

# Graceful shutdown timeout in seconds
# POLY_GRACEFUL_SHUTDOWN_TIMEOUT=30
